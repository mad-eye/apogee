  <script type="text/javascript">
    var installBoxHeight = $('#installBox').offset().top,
        didScroll = false;

    $(window).scroll(function() { didScroll = true; });
    var interval = setInterval(function() {
      if (didScroll) {
        didScroll = false;
        var windowBottom = $(window).scrollTop() + $(window).height();
        if (windowBottom >= installBoxHeight) {
          mixpanel.track("home", {page: '/get-started'});
          clearInterval(interval);
        }
      }
    }, 250);

    var installHandled = false;
    var installHandler = function() {
      if (!installHandled) {
        installHandled = true;
        mixpanel.track('installLink');
      }
    };
    $('.installCmd').bind('mousedown', installHandler);
    $('.installCmd').bind('mouseup', installHandler);
  </script>
